function q {
    squeue --user="$(whoami)" --format="%.8i %.9P %45j %.8T %.12M %9N"
    echo -e "\nTotal number of jobs: $(squeue --user="$(whoami)" -h | wc -l)"
}

function qq {
    watch -n 1 "squeue --user=$(whoami) --format='%.8i %.5P %40j %.1T %.12M %8N'; echo -e '\nTotal number of jobs: '; squeue --user=$(whoami) -h | wc -l"
}
